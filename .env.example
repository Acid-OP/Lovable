# ==================================
# DATABASE CONFIGURATION (REQUIRED)
# ==================================
DATABASE_URL="postgresql://username:password@localhost:5432/lovable?schema=public"

# ==================================
# REDIS CONFIGURATION
# ==================================
REDIS_HOST="localhost"
REDIS_PORT="6379"

# ==================================
# AI/LLM CONFIGURATION (REQUIRED)
# ==================================
GOOGLE_GENERATIVE_AI_API_KEY="your-google-api-key-here"

# ==================================
# SERVER CONFIGURATION
# ==================================
PORT="3001"
CONTAINER_PORT="3003"
API_BASE_URL="http://localhost:3001"
CONTAINER_BASE_URL="http://localhost:3003"

# ==================================
# DOCKER CONFIGURATION
# ==================================
# macOS/Linux: unix:///var/run/docker.sock
# Windows: //./pipe/docker_engine
DOCKER_SOCKET="unix:///var/run/docker.sock"
SANDBOX_IMAGE="lovable-sandbox"
